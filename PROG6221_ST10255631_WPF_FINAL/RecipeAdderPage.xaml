<Page x:Class="PROG6221_ST10255631_WPF_FINAL.RecipeAdderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG6221_ST10255631_WPF_FINAL"
      mc:Ignorable="d" 
      d:DesignWidth="450"
      Height="450"
      Title="Add a New Recipe"
      Background="#FFFAF0" >

    <StackPanel Margin="30" Background="#FFF0E6">
        <Label Content="Recipe Name:" 
               FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBox x:Name="RecipeNameTextBox" Margin="0,0,0,10" 
                 Padding="8" BorderBrush="#D4A373" BorderThickness="1"  />

        <GroupBox Header="Ingredients" Margin="0,0,0,10"
                  BorderBrush="#D4A373">
            <StackPanel x:Name="IngredientsPanel"/>
        </GroupBox>

        <GroupBox Header="Steps" Margin="0,0,0,10"
                  BorderBrush="#D4A373">
            <StackPanel x:Name="StepsPanel"/>
        </GroupBox>

        <Button Content="Save Recipe" HorizontalAlignment="Center" Margin="0,0,0,0" 
                Width="150" Padding="8" Background="#D4A373" Foreground="White"
                BorderBrush="#8C6448" FontSize="14" FontWeight="Bold" Click="SaveRecipeButton_Click" />
    </StackPanel>
</Page>
